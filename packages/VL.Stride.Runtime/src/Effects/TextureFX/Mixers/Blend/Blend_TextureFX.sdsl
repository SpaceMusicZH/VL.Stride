[Category("Mixer")]
[Summary("")]
shader Blend_TextureFX : TextureFX
{
    float Mix = 0.5f;

    [Default(1, 1, 1, 1)]
    compose ComputeFloat4 BlendResult;

    stage override float4 Shading()
    {
        float4 c0 = InTex();
        float4 c1 = InTex2();
        float4 blend = BlendResult.Compute();
        float4 c0Mix = lerp(c0, blend, Mix * 2);
        float4 c1Mix = lerp(blend, c1, (Mix - 0.5) * 2);
        return Mix > 0.5 ? c1Mix : c0Mix;
    }
};