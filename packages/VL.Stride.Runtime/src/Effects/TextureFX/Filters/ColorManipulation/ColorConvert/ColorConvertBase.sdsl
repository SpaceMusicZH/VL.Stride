shader ColorConvertBase : TextureFX
{
    abstract float4 Convert(float4 col);

    stage override float4 Shading()
    {
        float2 uv = streams.TexCoord;
        float4 col = Texture0.SampleLevel(LinearSampler, uv, 0);
        
        return Convert(col);
    }
};