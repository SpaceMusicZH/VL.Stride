[Category("Filter")]
[Summary("")]
shader ColorMap_SatValue_Internal_TextureFX : ColorMapBase
{
    float4 ColorMap(float4 col)
    {
        float2 f = base.RGBtoHSV(col.rgb).yz;
        return Ramp(f);
    };
};