[Category("Filter")]
[Summary("")]
shader ColorMap_Tone_Internal_TextureFX : ColorMapBase
{
    float4 ColorMap(float4 col)
    {
        float3 h = RGBtoHSV(col.rgb);
        col.rg = sin((h.x + float2(.25,0)) * acos(-1)*2);
        float2 f = col.rg;
        
        return Ramp(f);
    };
};