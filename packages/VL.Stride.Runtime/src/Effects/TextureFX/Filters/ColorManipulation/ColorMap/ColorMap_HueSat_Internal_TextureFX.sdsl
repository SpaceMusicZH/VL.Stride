[Category("Filter")]
[Summary("")]
shader ColorMap_HueSat_Internal_TextureFX : ColorMapBase
{
    float4 ColorMap(float4 col)
    {
        float2 f = RGBtoHSV(col.rgb).xy;
        return Ramp(f);
    };
};