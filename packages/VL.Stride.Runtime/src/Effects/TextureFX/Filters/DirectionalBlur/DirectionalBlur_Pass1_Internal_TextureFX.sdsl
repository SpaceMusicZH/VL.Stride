shader DirectionalBlur_Pass1_Internal_TextureFX : DirectionalBlurBase
{
    float BlurPass(float2 uv, int iter)
    {
        //control texture currently only works when a texture is connected
        float ctrl = Texture1.SampleLevel(LinearSampler, uv, 0).x / iter;

        return ctrl;
    }
};